    <img class="card-img-top" src="{{coin.imageThumb}}" alt="{{coin._id}}" />
    <div class="card-body">
      <h5 class={{coin.name}}>{{coin.name}}</h5>
      <p class="card-text">{{coin.valueEUR}} Current Price</p>
      <p>{{quantity}}</p>

<p>{{#multiply quantity coin.value}} {{/multiply}} â‚¬ </p>
      <a
        href="/profile/portfolio/{{coin.coinId}}/details"
